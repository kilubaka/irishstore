<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.review" remove="true" />
        <referenceContainer name="product.info.stock.sku" remove="true"/>

        <referenceContainer name="product.info.form.options">
            <block class="Magento\Cms\Block\Block" name="ProductSaleCode" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">product-code-block</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="ProductPros" after="ProductSaleCode">
                <arguments>
                    <argument name="block_id" xsi:type="string">product-pros-block</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="page.main.title">
            <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.sku" template="Magento_Catalog::product/view/attribute.phtml" before="-">
                <arguments>
                    <argument name="at_call" xsi:type="string">getSku</argument>
                    <argument name="at_code" xsi:type="string">sku</argument>
                    <argument name="css_class" xsi:type="string">sku</argument>
                    <argument name="at_label" xsi:type="string">default</argument>
                    <argument name="add_attribute" xsi:type="string">itemprop="sku"</argument>
                </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View" name="product.reviews" template="Magento_Catalog::product/view/review.phtml" after="-" />
        </referenceContainer>

        <referenceContainer name="product.info.price">
            <block name="sale.viewmodel" template="Kravchuk_ModuleAdder::sale.phtml" class="Kravchuk\ModuleAdder\Block\DiscountViewModel" after="-"/>
        </referenceContainer>

        <move element="catalog.product.related" destination="content" after="content.WeLoveIt" />

        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="content.WeLoveIt" after="product.info.details">
                <arguments>
                    <argument name="block_id" xsi:type="string">weLoveIt-block</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="product.info.options.wrapper">
            <block class="Magento\Catalog\Block\Product\View" template="Magento_Catalog::modal_overlay.phtml"
                   name="SizeChartPopUp" as="SizeChartPopUp" />
        </referenceBlock>

        <referenceBlock name="product.info.media.image">
            <arguments>
                <argument name="viewModelNewCollection" xsi:type="object">Kravchuk\ModuleAdder\ViewModel\newLabelViewModel</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="category.products.list">
            <arguments>
                <argument name="viewModelNewCollection" xsi:type="object">Kravchuk\ModuleAdder\ViewModel\newLabelViewModel</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="SizeChartPopup">
                <arguments>
                    <argument name="block_id" xsi:type="string">size-chart-content</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
