<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Cms\Block\Block" name="HeaderTopBanner" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-top__banner</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="header.panel">
            <block class="Kravchuk\ModuleAdder\Block\CustomLink" name="custom-header-link" before="-">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Extended 6 Month Free Returns</argument>
                    <argument name="path" xsi:type="string">https://irishstore.com/delivery-information</argument>
                </arguments>
            </block>
            <referenceBlock name="header.links">
                <block class="Magento\Customer\Block\Account\Customer" name="customer" template="Magento_Customer::account/customer.phtml" before="-"/>
            </referenceBlock>
            <referenceBlock name="register-link"  remove="true"/>
        </referenceContainer>

        <referenceContainer name="footer">
            <referenceBlock class="Magento\Framework\View\Element\Html\Links" name="footer_links" remove="true" />
            <block class="Magento\Cms\Block\Block" name="FooterLinks" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-links</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="FooterSocial" after="FooterLinks">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-social</argument>
                </arguments>
            </block>

        </referenceContainer>

        <referenceContainer name="before.body.end">
            <referenceBlock name="copyright" remove="true" />
            <block class="Magento\Cms\Block\Block" name="FooterContacts">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-contacts</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="store.menu">
            <block class="Magento\Cms\Block\Block" name="NavContacts" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">nav-contacts</argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
